<div class="col-md-6 col-md-offset-3">

  <h1>New Attraction</h1>
  <%= bootstrap_form_for(@attraction) do |f| %>
    <%= f.text_field :name %>
    <%= f.text_field :min_height, label: 'Height Requirement (in inches)' %>
    <%= f.text_field :happiness_rating, label: 'How fun is it? (1-5 scale)' %>
    <%= f.text_field :nausea_rating, label: 'How nauseous-inducing is it? (1-5 scale)' %>
    <%= f.text_field :tickets, label: 'How many tickets does it cost?' %>

    <%= f.submit "#{@submit}", class: "btn btn-primary" %>
  <% end %>

</div>
