<div class="col-md-6 col-md-offset-3">
  <h1>Listing Attractions</h1>
  <table class="center">
    <thead>
      <tr><th colspan="3"></th></tr>
    </thead>
    <tbody>
      <tr>
        <td><strong>Picture</strong></td>
        <td><strong>Name</strong></td>
        <td><strong>Tickets</strong></td>
        <td align="center"><strong>Details</strong></td>
      </tr>
      <% @attractions.each do |att| %>
      <tr>
        <td><img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" width="100"></td>
        <td><%= att.name %></td>
        <td align="center">
          <%= att.tickets %>
        </td>
        <td>
          <%= link_to "Go on #{att.name}", attraction_path(att) if !current_user.admin %>
          <%= link_to "Show #{att.name}", attraction_path(att) if current_user.admin %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <p><%= link_to  "New Attraction", new_attraction_path %></p>
</div>
