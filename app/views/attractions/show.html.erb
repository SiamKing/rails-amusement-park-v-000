<div class="center">
  <div class="pic">
    <img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" height="250">
  </div>
  <div class="info">
    <p><strong>Name: </strong><%= @attraction.name %></p>
    <p><strong>Total Number of Users: </strong><%= @attraction.rides.count %></p>
    <p><strong>Ticket Requirement: </strong><%= @attraction.tickets %></p>
    <p><strong>Height Requirement: </strong><%= @attraction.min_height %></p>
    <p><strong>Nausea Rating: </strong><%= @attraction.nausea_rating %></p>
    <p><strong>Happiness Rating: </strong><%= @attraction.happiness_rating %></p>

    <% if !current_user.admin? %>
      <div class="btn">
      <%= form_tag rides_new_path do %>
        <input type="hidden" name="user_id" value="<%= current_user.id %>">
        <input type="hidden" name="attraction_id" value="<%= @attraction.id %>">
        <input type="submit" value="Go on this ride" class="btn btn-primary">
      <% end %>
    </div>
    <% else %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %><br>
    <%= link_to "Back", :back %>
    <% end %>
  </div>
</div>
